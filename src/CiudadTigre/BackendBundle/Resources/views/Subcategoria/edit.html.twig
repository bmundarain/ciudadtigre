{% extends '::backend.html.twig' %}

{% block body -%}

{{ parent() }}

<div class="container">
    
<h1>Editando Sub-Categoria</h1>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-info">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(edit_form) }}
    <div>
        {{ form_errors(edit_form) }}

        <div class="form-group">
            <label class="control-label">Nombre:</label>
            {{ form_errors(edit_form.nombre) }}
            {{ form_widget(edit_form.nombre, { 'attr': { 'class': 'form-control' } }) }}
        </div>
            
        <div class="form-group">
            <label class="control-label">Peso:</label>
            {{ form_errors(edit_form.promocionado) }}
            {{ form_widget(edit_form.promocionado, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        
        <div class="form-group">
            <label class="control-label">Categor√≠a:</label>
            {{ form_errors(edit_form.categoria) }}
            {{ form_widget(edit_form.categoria, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        
        {{ form_widget(edit_form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
    </div>
    
    {{ form_end(edit_form) }}
    
    <br>
    
    <div class="row">
        <ul>
            <li>
                <a href="{{ path('subcategoria') }}">
                    Volver a la lista
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
</div>

{% endblock %}
