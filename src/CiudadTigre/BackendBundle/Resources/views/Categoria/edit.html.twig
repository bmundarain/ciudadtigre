{% extends '::backend.html.twig' %}

{% block body -%}

{{ parent() }}

<div class="container">
    <h1>Editando Categoria</h1>
    
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-info">
            {{ flashMessage }}
        </div>
    {% endfor %}
    
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(edit_form) }}
    <div>
        {{ form_errors(edit_form) }}
        
        <div class="form-group">
            <label class="control-label">Nombre:</label>
            {{ form_errors(edit_form.nombre) }}
            {{ form_widget(edit_form.nombre, { 'attr': { 'class': 'form-control' } }) }}
        </div>
            
        <div class="form-group">
            {{ form_label(edit_form.foto, 'Imagen:') }}
            {{ form_errors(edit_form.foto) }}
            {{ form_widget(edit_form.foto) }}
            <p class="help-block"><strong>Medidas: </strong> 47x46 píxeles. <strong>Tamaño máximo:</strong> 500 KB. <strong>Formato preferido:</strong> JPEG.</p>
        </div>
        
        {{ form_widget(edit_form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
    </div>
    
    {{ form_end(edit_form) }}
    
    <br>
    
    <div class="row">
        <ul>
            <li>
                <a href="{{ path('categoria') }}">
                    Volver a la lista
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </div>
</div>

{% endblock %}
