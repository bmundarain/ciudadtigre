{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <h1>Categorias</h1>
    
    <a href="{{ path('categoria_new') }}" class="btn btn-primary">Nuevo</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <!--<th>Rutafoto</th>-->
                <th>Fecha de Creaci√≥n</th>
                <!--<th>Updatedat</th>-->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categoria_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categoria_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categoria_new') }}" class="btn btn-primary">Nuevo</a>
    
</div>
{% endblock %}
