{% extends '::backend.html.twig' %}

{% block body -%}

{{ parent() }}

<div class="container">
    <h1>Editar contraseña</h1>

    {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-info">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
            </div>
    {% endfor %}

    {{ form_start(edit_form) }}

        {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group {% if edit_form.password.first.vars.errors|length > 0 %} has-error{% endif %}">
                        <div>
                        {% for errorItem in edit_form.password.first.vars.errors %}
                            <label class="control-label has-error" for="{{ edit_form.password.vars.id }}">{{ errorItem.message }}</label>
                        {% endfor %}
                        {{ form_widget(edit_form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nueva contraseña', 'required': 'required'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            {{ form_widget(edit_form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Repetir contraseña', 'required': 'required'}}) }}
                        </div>
                    </div>

                    {{ form_widget(edit_form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
                </div>
            </div>

    {{ form_end(edit_form) }}

    <a class="btn btn-toolbar" href="{{ path('administrador') }}">Volver</a>

</div>
{% endblock %}
