{% extends '::base.html.twig' %}

{% block body -%}
<div class="container">
    <h2>Banner</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Banner:</th>
                <td><img src="{{ asset('/uploads/images/banners/' ~ entity.ruta) }}"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('banner') }}">
                Volver a la Lista
            </a>
        </li>
        <li>
            <a href="{{ path('banner_edit', { 'id': entity.id }) }}">
                Editar
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
{% endblock %}
