{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@CiudadTigreAnuncianteBundle/Resources/public/css/cet.css'
                   '@CiudadTigreAnuncianteBundle/Resources/public/css/jquery.bxslider.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %} 
{% javascripts '@CiudadTigreAnuncianteBundle/Resources/public/js/jquery-2.1.1.min.js' 
               '@CiudadTigreAnuncianteBundle/Resources/public/js/jquery.bxslider.min.js'
%}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
{% endblock %}

{% block body %}

<div class="contenedor-top">
  <div class="base-top">
  
  	<div class="mancha-contenido">
  
        <div class="cont-logo">
            <a href="{{ path('ciudad_tigre_anunciante_homepage') }}"><img src="{{ asset('bundles/ciudadtigreanunciante/images/logo-cet.png') }}"></a>
        </div>
            
        <div class="cont-navegacion">
            <div class="cont-redsoc txt-rob-cnd">Siguenos en
                <a href="https://www.facebook.com/pages/Ciudad-El-Tigre/183242371694254?fref=ts"><img src="{{ asset('bundles/ciudadtigreanunciante/images/logo-facebook.png') }}"></a>
                <a href="https://twitter.com/ciudadeltigre"><img src="{{ asset('bundles/ciudadtigreanunciante/images/logo-twitter.png') }}"></a>
            </div>
            <div class="cont-menu">
                <ul>
                    <li><a href="">Noticias</a></li>
                    <li><a href="">Revistas</a></li>
                    <li><a href="{{ path('ciudad_tigre_anunciante_homepage') }}">Gu&iacute;a Comercial y Profesional</a></li>
                    <li><a href="">La Ciudad</a></li>
                    <li><a href="">Clasificados</a></li>
                </ul>
            </div>
        </div>
	</div>
    	<div class="base-banner">
        	<div class="banner">
                    <ul class="bxslider">
                        {{ render_esi(controller('CiudadTigreAnuncianteBundle:Default:mostrarBanner')) }}
                    </ul>
                </div>
            <div class="mancha-contenido">
                <div class="titulo-seccion">Directorio
                </div>
                <div class="buscador">
                    <form action="{{ path('anunciante_buscar') }}" method="post" accept-charset="UTF-8" role="search">
                    	<input type="search" value="" name="buscar">
                        <input type="submit" value="Buscar">
                    </form>
                </div>
            </div>
        </div>

  </div>
</div>
<div class="contenedor-gen bg-gris">
    <div class="links-alfabetico txt-rob-cnd">
        
        {% for letter in 'A'..'Z' %}
            <a href="{{ path('buscar_letra', {'letter': letter}) }}">{{ letter }}</a> &bull;
